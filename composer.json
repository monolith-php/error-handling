{
  "name": "monolith/error-handling",
  "description": "Error handling component for the Monolith framework.",
  "keywords": [
    "monolith",
    "error handling"
  ],
  "require": {
    "php": ">=8.1",
    "filp/whoops": "^2.2@dev",
    "monolith/component-bootstrapping": "^9",
    "monolith/configuration": "^8"
  },
  "require-dev": {
    "phpspec/phpspec": "^7"
  },
  "autoload": {
    "psr-4": {
      "Monolith\\ErrorHandling\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spec\\Monolith\\ErrorHandling\\": "spec/"
    },
    "files": [
      "spec/functions.php"
    ]
  },
  "config": {
    "sort-packages": true,
    "bin-dir": "bin"
  },
  "minimum-stability": "dev"
}
